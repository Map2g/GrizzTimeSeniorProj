        <div class="col-12">
            <div class="callout callout-info">
                <h5><i class="fas fa-info"></i> Note:</h5>
                This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
            </div>


            <!-- Main content -->
            <div class="invoice p-3 mb-3">
                <!-- title row -->
                <div class="row">
                    <div class="col-12">
                        <h4>
                            <i class="fas fa-globe"></i> GrizzTime
                            <small class="float-right">Date: @System.DateTime.Now.Date.ToShortDateString() </small>
                        </h4>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- info row -->
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <strong>Project</strong>
                        <address>
                            @Html.DisplayFor(m => m.ProjName) - <b>@Html.DisplayFor(m => m.ProjStatus)</b><br>
                            @Html.DisplayFor(m => m.ProjDesc)<br>
                            <strong>Contract</strong><br>
                            @Html.DisplayFor(m => m.ContractName)
                        </address>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <strong>Project Manager</strong>
                        <address>
                            @Html.DisplayFor(m=>m.ProjManName)
                        </address>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <b>Start Date:</b> @Html.DisplayFor(m => m.ProjStartDate)<br>
                        <b>End Date:</b> @Html.DisplayFor(m => m.ProjEndDate)<br>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- Table row -->
                <div class="row">
                    <div class="col-12 table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Task</th>
                                    <th>Billable Rate</th>
                                    <th>Total Hours</th>
                                    <th>Total Earned</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.EmpProjTask.Any())
                                {
                                    foreach (var item in Model.EmpProjTask)
                                    {
                                        <tr>
                                            <td> @item.TaskName </td>
                                            <td> @item.BillableRate.ToString("C", CultureInfo.CurrentCulture)/hour </td>
                                            <td> @item.EmpTaskHours </td>
                                            <td> @item.EmpTaskAmt.ToString("C", CultureInfo.CurrentCulture)</td>                                          
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-6">
                    </div>
                    <!-- /.col -->
                    <div class="col-6">
                        <p class="lead">Totals</p>

                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:50%">Project Total Hours</th>
                                    <td>@Html.DisplayFor(m => m.ProjTotalHr) </td>
                                </tr>
                                <tr>
                                    <th>Project Total Earned</th>
                                    <td>@Html.DisplayFor(m => m.ProjTotalCost) </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- this row will not appear when printing -->
                <div class="row no-print">
                    <div class="col-12">
                        <a href="@Url.Action("ProjectInvoice_Print", "Invoice", new {id = Model.ProjID })" target="_blank" class="btn btn-lg btn-default"><i class="fas fa-print"></i> Print</a>
                        @*<button type="button" class="btn btn-success float-right">
