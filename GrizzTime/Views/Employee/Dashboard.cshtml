</div>
<div class="db-Row-Button-Box">
    <div class="db-Column-Button-Box">
        <a href="/employee/edit/@Request.Cookies["UserID"].Value">
            <div class="db-Page-Buttons">
                <span>
                    <h2>
                        Edit Employee
                    </h2>
                </span>
            </div>
        </a>
    </div>

    <div class="db-Column-Button-Box">
        <a href="/Timesheet/List">
            <div class="db-Page-Buttons">
                <span>
                    <h2>
                        Time Sheets
                    </h2>
                </span>
            </div>
        </a>
    </div>
</div>


@*Displays alert message telling user how the operation went.*@
@if (ViewBag.message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.message");
        };
    </script>
}
