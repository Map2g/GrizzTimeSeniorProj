@*@model GrizzTime.Models. *@

@{
    ViewBag.Title = "New Business";
}

<h2>Create a new business</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>User</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Business Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("busName", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("busName", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("busAddress", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("busAddress", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("busAddress", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Generate code" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Company code:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

        </div>
    </div>

</div>
}

<div>
    <p><a href="/home/index">Back to Home &raquo;</a></p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
