@model ICollection<GrizzTime.Models.workentry>
@using GrizzTime.ViewModels

@{
    GrizzTime.Models.workentry mon = null;
    GrizzTime.Models.workentry tue = null;
    GrizzTime.Models.workentry wed = null;
    GrizzTime.Models.workentry thu = null;
    GrizzTime.Models.workentry fri = null;
    GrizzTime.Models.workentry sat = null;
    GrizzTime.Models.workentry sun = null;

    int tID = ViewBag.TimeSheetID;

    if (Model != null)
    {
        foreach (var item in Model)
        {
            switch (item.WorkDate)
            {
                case "Monday":
                    mon = item;
                    break;
                case "Tuesday":
                    tue = item;
                    break;
                case "Wednesday":
                    wed = item;
                    break;
                case "Thursday":
                    thu = item;
                    break;
                case "Friday":
                    fri = item;
                    break;
                case "Saturday":
                    sat = item;
                    break;
                case "Sunday":
                    sun = item;
                    break;
            }
        }
    }
}

<style>
    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        grid-template-areas: ". Mon Tues Wed Thurs Fri Sat Sun Action" ". Mon-form Tues-form Wed-form Thurs-form Fri-form Sat-form Sun-form submit" ". . . . . . . . .";
    }

    .Mon {
        grid-area: Mon;
    }

    .Mon-form {
        grid-area: Mon-form;
    }

    .Tues {
        grid-area: Tues;
    }

    .Tues-form {
        grid-area: Tues-form;
    }

    .Wed {
        grid-area: Wed;
    }

    .Wed-form {
        grid-area: Wed-form;
    }

    .Thurs {
        grid-area: Thurs;
    }

    .Thurs-form {
        grid-area: Thurs-form;
    }

    .Fri {
        grid-area: Fri;
    }

    .Fri-form {
        grid-area: Fri-form;
    }

    .Sat {
        grid-area: Sat;
    }

    .Sat-form {
        grid-area: Sat-form;
    }

    .Sun {
        grid-area: Sun;
    }

    .Sun-form {
        grid-area: Sun-form;
    }

    .Action {
        grid-area: Action;
    }

    .submit {
        grid-area: submit;
    }
</style>

