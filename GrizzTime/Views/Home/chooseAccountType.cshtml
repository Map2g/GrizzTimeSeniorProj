@{
    ViewBag.Title = "Registration";
}

<h2>Choose Account </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Choose Account Type</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Business Account:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButton("accountType", "business")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Employee Account:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButton("accountType", "employee")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="Submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <p><a href="/home/index">Back to Home &raquo;</a></p>
</div>
