@{
    ViewBag.Title = "Dashboard";

}

<h2>Business Dashboard</h2>
<div class="form-horizontal">
    <h4> @ViewBag.BusinessName </h4>
    <hr />
    <div class="db-Row-Button-Box">
        <div class="db-Column-Button-Box">
            <a href="/business/myprojects">
                <div class="db-Page-Buttons">
                    <span>
                        <h2>
                            My Projects
                        </h2>
                    </span>
                </div>
            </a>
        </div>

        <div class="db-Column-Button-Box">
            <a href="/business/mycontracts">
                <div class="db-Page-Buttons">
                    <span>
                        <h2>
                            My Contracts
                        </h2>
                    </span>
                </div>
            </a>
        </div>
    </div>
    <div class="db-Row-Button-Box">

        <div class="db-Column-Button-Box">
            <a href="/business/myemployees">
                <div class="db-Page-Buttons">
                    <span>
                        <h2>
                            My Employees
                        </h2>
                    </span>
                </div>
            </a>
        </div>

        <div class="db-Column-Button-Box">
            <a href="/business/edit/@Request.Cookies["UserID"].Value">
                <div class="db-Page-Buttons">
                    <span>
                        <h2>
                            Business Details
                        </h2>
                    </span>
                </div>
            </a>
        </div>
    </div>

</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

