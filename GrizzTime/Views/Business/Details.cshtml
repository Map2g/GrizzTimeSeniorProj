@model GrizzTime.ViewModels.Business
@using GrizzTime.ViewModels

@{
    ViewBag.Title = "My Business";
}

<h2> @Model.BusName </h2>

<div class="form-horizontal">
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.BusName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BusName, new { htmlAttributes = new { @class = "input-md", @readonly="readonly"} })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "input-md", @readonly="readonly", @type="text" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BusDesc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BusDesc, new { htmlAttributes = new { @class = "input-md", @readonly="readonly" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BusAddress, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BusAddress, new { htmlAttributes = new { @class = "input-md", @readonly="readonly" } })
        </div>
    </div>

</div>

<br />

<div class="db-Row-Button-Box">
    <div class="db-Column-Button-Box">
        <a href="@Request.UrlReferrer">
            <div class="small-button">
                <span>
                    <h2>
                        Back
                    </h2>
                </span>
            </div>
        </a>
    </div>
    <div class="db-Column-Button-Box">
        <a href="/business/edit/@Request.Cookies["UserID"].Value">
            <div class="small-button">
                <span>
                    <h2>
                        Edit
                    </h2>
                </span>
            </div>
        </a>
    </div>
</div>

